{
  "name": "pig-server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "dev-win": "env-cmd -f env/.env.win nest start --watch",
    "dev:gen": "bash script/gen-id.sh",
    "dev:up": "npm run dev:gen && docker-compose --env-file ./env/.env.dev -f ./docker-compose.dev.yaml up --abort-on-container-exit --remove-orphans --build --force-recreate",
    "dev:halt": "docker-compose --env-file ./env/.env.dev -f ./docker-compose.dev.yaml down",
    "dev:destroy": "docker-compose --env-file ./env/.env.dev -f ./docker-compose.dev.yaml rm -f",
    "dev2:up": "npm run dev:gen && docker compose --env-file ./env/.env.dev -f ./docker-compose.dev.yaml up --abort-on-container-exit --remove-orphans --build --force-recreate",
    "dev2:halt": "docker compose --env-file ./env/.env.dev -f ./docker-compose.dev.yaml down",
    "dev2:destroy": "docker compose --env-file ./env/.env.dev -f ./docker-compose.dev.yaml rm -f",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@bull-board/api": "^5.9.2",
    "@bull-board/express": "^5.9.2",
    "@nestjs/bull": "^10.0.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mongoose": "^10.0.2",
    "@nestjs/platform-express": "^10.0.0",
    "bcrypt": "^5.1.1",
    "bull": "^4.11.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "express-basic-auth": "^1.2.1",
    "lodash": "^4.17.21",
    "md5": "^2.3.0",
    "moment": "^2.29.4",
    "mongoose": "^8.0.1",
    "node-telegram-bot-api": "^0.64.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/lodash": "^4.14.200",
    "@types/md5": "^2.3.4",
    "@types/node": "^20.3.1",
    "@types/node-telegram-bot-api": "^0.63.2",
    "@types/supertest": "^2.0.12",
    "@types/ws": "^8.5.9",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
